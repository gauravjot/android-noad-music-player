<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="10dp">

        <com.droidheat.musicplayer.ui.views.SquareImageView
            android:maxWidth="200dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:id="@+id/home_three_grid_imageView_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_three_grid_textView_1"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="6dp"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="10dp">

        <com.droidheat.musicplayer.ui.views.SquareImageView
            android:maxWidth="200dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:id="@+id/home_three_grid_imageView_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_three_grid_textView_2"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="6dp"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.droidheat.musicplayer.ui.views.SquareImageView
            android:maxWidth="200dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:id="@+id/home_three_grid_imageView_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_three_grid_textView_3"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="6dp"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>