<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">@color/actionBar</item>
        <item name="colorPrimaryDark">@color/statusBar</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
        <item name="thickness">2dp</item>
        <item name="gapBetweenBars">4dp</item>
        <item name="drawableSize">24dp</item>
    </style>

    <style name="ThemeActionBar" parent="AppTheme">
        <item name="android:actionBarStyle">@style/MyHomeActionBar</item>
        <item name="actionBarStyle">@style/MyHomeActionBar</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="ThemeActionBarBig" parent="AppTheme">
        <item name="android:actionBarStyle">@style/MyHomeActionBarBig</item>
        <item name="actionBarStyle">@style/MyHomeActionBarBig</item>
    </style>

</resources>